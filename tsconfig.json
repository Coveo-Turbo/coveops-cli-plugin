{
  "compilerOptions": {
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "module": "Node16",
    "lib": ["ESNext"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "./src/**/*",
    "./node_modules/@coveo/cli-commons/lib/**/*.d.ts"
  ],
  
}
